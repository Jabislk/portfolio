{% extends 'base.html.twig' %} {% block title %}Tous les Projets{% endblock %}
{% block body %}

<h1 class="mt-3 mb-4 comp">MY PROJECTS</h1>
<div class="cards">
  <div class="row">
    {% for projets in projets %}
    <div class="col-md-5 m-4 mx-auto">
      <div class="card">
        <img src="{{('upload/img/' ~ projets.img)}}" class="card-img-top" alt="Image">
        <div class="card-body">
          <h5 class="card-title text-center">{{ projets.titre }}</h5>
          <!-- <p class="card-text">{{ projets.github}}</p> -->
          <a href="{{ path('app_solo_project', { id: projets.id }) }}" class="btn btn-primary d-flex justify-content-evenly">See the project</a>

          <br>

          {% if is_granted ("ROLE_ADMIN") %}

            <a href="{{ path('app_delete_project', { id: projets.id }) }}"
              class="btn btn-outline-danger d-flex justify-content-evenly" >Delete</a><br/>

              <a href="{{ path('app_project_edit', { id: projets.id }) }}"
              class="btn btn-outline-warning d-flex justify-content-evenly" >Edit</a>
          {% endif %} 
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}

