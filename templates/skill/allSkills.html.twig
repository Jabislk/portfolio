{% extends 'base.html.twig' %} 
{% block title %}Comp√©tences{% endblock %} 

{% block body %}
  <section class="container">

      <br>

      <h1 class="mt-3 mb-4 comp">SKILLS</h1>
      
        <div class="row">
          {% for skill in skill %}
          <div class="card col-md-5 m-4 mx-auto" style="width: 19rem">
            <img
              class="my-3"
              style="width: 150; height: 15rem; object-fit: scale-down;}
"
              src="{{asset('upload/img/' ~ skill.img)}}"
              alt="Logo du langage"
            />
            <div class="card-body">
              <h5 class="card-title text-center">{{ skill.nom }}</h5>
              
      
              
              {% if is_granted ("ROLE_ADMIN") %}
              <div class="d-flex p-3 justify-content-between">

                <a 
                  class="btn btn-danger" 
                  href="{{ path('app_delete_skill',{id: skill.id}) }}" 
                  onclick="return confirm('Are you sure you want to remove this skill ?')"
                  >Delete</a
                >

                <a
                  href="{{ path('app_skill_edit', { id: skill.id }) }}"
                  class="btn btn-warning"
                  >Edit</a
                >
              </div>
              {% endif %}
            </div>
          </div>
          {% endfor %}
		  </div>
    </section>

    <br>
{% endblock %}
